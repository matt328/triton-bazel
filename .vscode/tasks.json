{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build util-lib (debug)",
      "type": "shell",
      "command": "bazel",
      "args": [
        "build",
        "--compilation_mode=dbg",
        "//libs/util-lib:util-lib"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}